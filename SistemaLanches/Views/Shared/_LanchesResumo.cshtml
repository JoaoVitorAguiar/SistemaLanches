@model Lanche
<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img class="img-fluid" src="@Model.ImagemUrl"></p>
    <h4>@Model.Preco.ToString("c")</h4>
    <h3>
        <a class="text-decoration-none" asp-controller="Lanche" asp-action="Details"
           asp-route-lancheId="@Model.LancheId">@Model.LancheNome</a>
    </h3>

    <p>@Model.DescricaoCurta</p>
      <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
            asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@Model.LancheId">
            Incluir no Carrinho
        </a>
        </p>
    </div>
</div>